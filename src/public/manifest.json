{
  "manifest_version": 3,
  "name": "Enspell",
  "version": "0.0.1",
  "description": "DLsiteをもっと快適に楽しむためのツール",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["*://*.dlsite.com/*"],
      "js": ["content/circle_filter.js"],
      "run_at": "document_end"
    },
    {
      "exclude_matches": ["*://*.dlsite.com/*touch/work/=/product_id/*"],
      "matches": ["*://*.dlsite.com/*/work/=/product_id/*"],
      "js": ["content/estimate.js"],
      "css": ["style.css"]
    }
  ],

  "options_ui":{
    "page": "options/options.html",
    "open_in_tab": true
  }

}
